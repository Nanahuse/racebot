{
    "name": "Debian Python DevContainer (uv)",
    "build": {
        "dockerfile": "../Dockerfile",
        "target": "dev"
    },
    "postCreateCommand": "bash .devcontainer/scripts/copy_auth.sh && uv sync",
    "remoteUser": "vscode",
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
        "source=${localEnv:USERPROFILE}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
        "source=${localEnv:USERPROFILE}/.ssh,target=/tmp/host-ssh,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "astral-sh.ty"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "editor.formatOnSave": true,
                // Ruff settings
                "ruff.fixAll": true,
                "ruff.organizeImports": true,
                "ruff.lint.enable": true,
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.codeActionsOnSave": {
                        "source.fixAll.ruff": "always",
                        "source.organizeImports.ruff": "always"
                    }
                },
                // Ty settings
                "ty.diagnosticMode": "workspace",
                "ty.inlayHints.variableTypes": false
            }
        }
    }
}